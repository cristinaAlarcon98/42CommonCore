unsigned int	ft_strlcat(char *dest, char *src, unsigned int size)
{
	char *const		odest = dest;
	unsigned int	dest_len;
	unsigned int	ret_val;
	unsigned int	total_length_of_the_string_they_tried_to_create;

	dest_len = ft_strlen(dest);
	
	if (dest_len >= size)
		ret_val = size + ft_strlen(src);
	else
	{
		ret_val = dest_len + ft_strlcpy(dest + dest_len, src, size - dest_len);
	}
	total_length_of_the_string_they_tried_to_create;	
	return (ret_val);
}


